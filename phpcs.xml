<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="MiProyecto">
    <description>Reglas de codificación para MiProyecto</description>
    <!-- Usamos el estándar PSR12 -->
    <rule ref="PSR12" />
    <!-- Limita el análisis al directorio src -->
    <file>src</file>
    <!-- Excluye directorios no relevantes -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>